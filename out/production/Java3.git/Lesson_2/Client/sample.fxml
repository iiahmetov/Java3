<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?scenebuilder-stylesheet style?>

<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ListView?>
<VBox alignment="center" prefWidth="481.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Lesson_2.Client.Controller">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <HBox fx:id="upperPanel">
        <TextField fx:id="loginField" minWidth="100" promptText="Login" style="-fx-control-inner-background: #b3b3b3;" HBox.hgrow="ALWAYS" />
        <PasswordField fx:id="passwordField" minWidth="100" onAction="#tryToAuth" promptText="Password" style="-fx-control-inner-background: #b3b3b3;" HBox.hgrow="ALWAYS" />
        <Button fx:id="authButton" minWidth="100" onMouseReleased="#onMouseReleasedTryToAuth" text="Sign In" />
    </HBox>

    <HBox fx:id="loggedInPanel" managed="false" visible="false">
        <Button fx:id="changeNickButton" minWidth="100" onMouseReleased="#onMouseReleasedChangeNick" text="Change Nickname" />
        <Button fx:id="logOutButton" minWidth="100" onMouseReleased="#onMouseReleasedLogOut" text="Log Out" />
    </HBox>

    <HBox VBox.vgrow="ALWAYS">
    <TextArea fx:id="textArea" editable="false" focusTraversable="false" style="-fx-control-inner-background: #666666;" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" />
    <ListView fx:id="clientList" managed="false" visible="false" minWidth="100" onMouseClicked="#clickClientList" style="-fx-control-inner-background: #b3b3b3;"/>
    </HBox>

    <HBox fx:id="bottomPanel" managed="false" visible="false">
        <TextField fx:id="textField" minWidth="100" onAction="#sendMSG" promptText="Write your message" style="-fx-control-inner-background: #b3b3b3;" HBox.hgrow="ALWAYS" />
        <Button fx:id="sendButton" minWidth="100" onMouseReleased="#onMouseReleasedSendButton" text="Send" />
    </HBox>
</VBox>
