<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?scenebuilder-stylesheet style?>


<VBox alignment="center" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Lesson_2.Client.ChangeNicknameController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <HBox fx:id="changeNickPanel">
        <TextField fx:id="nicknameField" minWidth="100" onAction="#onActionApply" promptText="Enter new nickname" style="-fx-control-inner-background: #b3b3b3;" HBox.hgrow="ALWAYS" />
        <Button fx:id="applyButton" minWidth="100" onMouseReleased="#onMouseReleasedApply" text="Apply" />
    </HBox>

    <HBox VBox.vgrow="ALWAYS">
    <TextArea fx:id="statusArea" editable="false" focusTraversable="false" style="-fx-control-inner-background: #666666;" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" />
    </HBox>

</VBox>
